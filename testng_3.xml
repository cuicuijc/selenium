<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="3" >
    <test name="FirefoxTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="webDriver3.MultipleBrowserSearchTest"/>
        </classes>
    </test>

    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="webDriver3.MultipleBrowserSearchTest"/>
        </classes>
    </test>

    <test name="ActionsTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="webDriver3.ActionsPractice"/>
        </classes>
    </test>

    <test name="DataDrive">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="webDriver3.chapter12.DataProviderTest"/>
            <class name="webDriver3.chapter12.TestDataDrivenByCSVFile"/>
            <class name="webDriver3.chapter12.TestDataDrivenByExcelFile"/>
        </classes>
    </test>


</suite>